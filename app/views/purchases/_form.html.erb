<%= form_with(model: purchase, local: true) do |form| %>
  <% if purchase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
      <% purchase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.collection_select :supplier_id, Supplier.all, :id, :suppliers_name %>
 
  <%= form.fields_for :purchase_products do |builder| %>
      <%= render 'purchase_product_fields', form: builder %>
  <% end %>

  <%= link_to_add_fields "Add Product", form, :purchase_products %>

  <div class="field">
    <%= form.label :date_of_the_order %>
    <%= form.date_select :date_of_the_order %>
  </div>

  <div class="field">
    <%= form.label :estimated_total %>
    <%= form.text_field :estimated_total, class: "est_total" %>
  </div>

  <div class="field">
    <%= form.label :actual_total %>
    <%= form.text_field :actual_total %>
  </div>

  <div class="field">
    <%= form.label :expected_date_of_delivery %>
    <%= form.date_select :expected_date_of_delivery %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <form action="/html/tags/html_form_tag_action.cfm" method="post">
    <textarea name="comments" id="comments" style="width:20%;height:90px;background-color:lightgrey;color:slategrey;border:groove;padding:2%;font:22px/30px sans-serif;">
    </textarea>
  </form>
</script>


  <script type="text/javascript">
    $('.est_subtotal').change(function() {
  var eSubtotal = $(this).parents('.nested-fields').find('.est_subtotal').val();
  $(this).parents().find('.est_total').val(eSubtotal)
  });

    $('.est_quantity, .est_price').keyup(function(){
    var eQuantity = $(this).parents('.nested-fields').find('.est_quantity').val();
    var ePrice = $(this).parents('.nested-fields').find('.est_price').val();
    var cmpSubtotal = eQuantity * ePrice;
    $(this).parents('.nested-fields').find('.est_subtotal').val(cmpSubtotal);    
    });
    
    $('.act_quantity, .act_price').keyup(function(){
    var eQuantity = $(this).parents('.nested-fields').find('.act_quantity').val();
    var ePrice = $(this).parents('.nested-fields').find('.act_price').val();
    var cmpSubtotal = eQuantity * ePrice;
    $(this).parents('.nested-fields').find('.act_subtotal').val(cmpSubtotal);    
    });

  
</script>



  
<% end %>
