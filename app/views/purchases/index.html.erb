<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

  <%= form_tag purchases_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>

<table>
  <thead>
    <tr>
      <th><%= sortable "supplier_id", "SUPPLIER ID" %></th>
      <th><%= sortable "suppliers.suppliers_name", "SUPPLIER NAME" %></th>
      <th><%= sortable "date_of_the_order", "ORDER DATE" %></th>
      <th><%= sortable "expected_date_of_delivery", "DELIVERY DATE" %></th>
      <th><%= sortable "estimated_total", "ESTIMATED TOTAL" %></th>
      <th><%= sortable "actual_total", "ACTUAL TOTAL" %></th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.supplier_id %></td>
        <td><%= purchase.supplier.suppliers_name %></td>
        <td><%= purchase.date_of_the_order %></td>
        <td><%= purchase.expected_date_of_delivery %></td>
        <td><%= purchase.estimated_total %></td>
        <td><%= purchase.actual_total %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Purchase', new_purchase_path %>
