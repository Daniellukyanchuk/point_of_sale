<%= form_with(model: production, local: true) do |form| %>
  <% if production.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(production.errors.count, "error") %> prohibited this production from being saved:</h2>

      <ul>
      <% production.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.fields_for :production_recipes do |builder| %>
      <%= render 'production_recipe_fields', form: builder %>
  <% end %>

  <%= link_to_add_fields "Add Product", form, :production_recipes %>

  <div class="field">
    <%= form.label :recipe_id %>
    <%= form.number_field :recipe_id %>
  </div>

  <div class="field">
    <%= form.label :recipe_name %>
    <%= form.text_field :recipe_name %>
  </div>

  <div class="field">
    <%= form.label :grand_total %>
    <%= form.text_field :grand_total %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
