<p id="notice"><%= notice %></p>

<h1>Productions</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Recipe name</th>
      <th>Grand total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productions.each do |production| %>
      <tr>
        <td><%= production.recipe_id %></td>
        <td><%= production.recipe_name %></td>
        <td><%= production.grand_total %></td>
        <td><%= link_to 'Show', production %></td>
        <td><%= link_to 'Edit', edit_production_path(production) %></td>
        <td><%= link_to 'Destroy', production, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

