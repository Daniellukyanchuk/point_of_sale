<p id="notice"><%= notice %></p>

<h1>Productions</h1>


<%= form_tag productions_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<table class="hoverTable">
  <thead>
    <tr class="active">
      <th><%= sortable "recipe_id", "Recipe ID" %></th>
      <th><%= sortable "recipes.recipe_name", "Recipe Name" %></th>
      <th><%= sortable "product_amount", "Product Amount" %></th>
      <th><%= sortable "recipe_price", "Recipe Price" %></th>
      <th><%= sortable "grand_total", "Total" %></th>
      <th><%= sortable "cost_to_make", "Cost to Make" %></th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @productions.each do |production| %>
      <tr>
        <td><%= production.recipe_id %></td>
        <td><%= production.recipe.nil? ? "" : production.recipe.recipe_name %></td>
        <td><%= production.product_amount %></td>
        <td><%= production.recipe_price %></td>
        <td><%= production.grand_total %></td>
        <td><%= production.cost_to_make %></td>
        <td><%= link_to 'Show', production %></td>
        <td><%= link_to 'Edit', edit_production_path(production) %></td>
        <td><%= link_to 'Destroy', production, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Production', new_production_path %>
