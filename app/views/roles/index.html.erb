
<h1>Roles</h1>
<div class="mb-3">
  <%= link_to _('+ New Role'), new_role_path, class: "btn btn-secondary mr-1" %>
  <%= link_to _('<i class="fa-solid fa-download"></i> Export as json').html_safe , role_export_path, class: "btn btn-primary mr-1" %>
  <%= link_to _('<i class="fa-solid fa-file-import"></i> Import from json').html_safe , new_roles_import_path , class: "btn btn-primary mr-1" %>
</div>


<table>
  <thead>
    <tr>
      <th>Role name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role_name %></td>
        <td class="col-2">
          <%= link_to '<i class="fa-solid fa-pencil"></i>'.html_safe, edit_role_path(role), class: "text-secondary m-2" %>
          <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, role, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger m-2" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


