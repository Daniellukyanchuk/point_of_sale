<div class="jumbotron m-0 p-0">
  <div>
    <h1 class="ml-3"><%= _('Roles') %></h1>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="contaienr ml-3">
  <%= link_to _('<i class="fa-solid fa-plus"></i> New Role').html_safe, new_role_path, class:"text-light btn btn-primary" %>
  <%= link_to _('<i class="fa-solid fa-file-export"></i> Export to JSON').html_safe , role_export_path, class:"text-light btn btn-primary" %>
  <%= link_to _('<i class="fa-solid fa-file-import"></i> Import from JSON').html_safe , new_roles_import_path, class:"text-light btn btn-primary" %>
</div>


<table class="table" style="width: 90%">
  <thead class="table-light">
    <tr>
      <th><%= _('Role name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role_name %></td>
        <td><%= link_to _('Edit'), edit_role_path(role), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to _('Destroy'), role, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


