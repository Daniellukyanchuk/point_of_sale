<div class="marginRight">
    <h1>Import Roles From JSON</h1>

    <h5>Select File</h5>
    <%= form_for @roles_import do |f| %>
      <% if @roles_import.errors.any? %>
        <%= pluralize(@roles_import.errors.count, "error") %> prevented us from importing your spreadsheet. Please update your spreadsheet and try again. 
        <ul>
        	<% @roles_import.errors.full_messages.each do |msg| %>
        	  <li><%= msg %></li>
        	<% end %>
        </ul>
      <% end %>

      <%= f.file_field :file %>
      <%= f.submit "Import File", :class => 'text-light btn btn-primary btn-sm' %>
    <% end %>

    <%= link_to 'Dowload sample',"/sample-excel.xlsx" %>
</div> 
