<h1><%= _(' Import Roles From File') %></h1>

<div class="container ml-0">
  <h3><%= _('Requirements') %></h3>

  <ul class="ml-4">
    <li><%= _('Files must be one of the following formats: .json') %> </li>
    <li><%= _('File must be exported from an application witht he same database structure') %> </li>
  </ul>
<hr>
  <h5><%= _('Select File') %></h5>

  <%= form_for @roles_import do |f| %>
    <% if @roles_import.errors.any? %>
      <%= pluralize(@roles_import.errors.count, "error") %> 
      <%= _('prevented us from importing your file. Please update your file and try agin.') %> 
      <ul>
        <% @roles_import.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <%= f.file_field :file, class: 'file-upload' %>
    <%= f.submit _("Import Roles"), :class => "btn btn-primary"%>
  <% end %>
</div>

