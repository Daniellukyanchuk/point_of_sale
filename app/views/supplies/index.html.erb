<p id="notice"><%= notice %></p>

<h1>Inventory</h1>

<table>
  <thead>
    <tr>
    <th class="align_right"><%= sortable "id", "ID" %></th>
      <th><%= sortable "created_at", "Date Received" %></th>
      <th><%= sortable "supplier_id", "Supplier ID" %></th>
      <th><%= sortable "supplier_id", "Supplier Name" %></th>
      <th><%= sortable "purchase_total", "Purchase Total" %></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
  <% @supplies .each do |supply| %>
    <tr>
      <td class="align_right"><%= supply.id %></td>
      <td><%= supply.created_at.strftime("%d %b %Y") %></td> 
      <td class="align_center"><%= supply.supplier_id %></td>
      <td><%= supply.supplier.supplier_name %></td>
      <td class="align_right"><%= supply.purchase_total %></td>
      <td><%= link_to 'Show', supply %></td>
      <td><%= link_to 'Edit', edit_supply_path(supply) %></td>
      <td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

