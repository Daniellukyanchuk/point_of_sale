<p id="notice"><%= notice %></p>

<h1><%= _('Products') %></h1>
  <%= form_tag products_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag _("Search"), :name => nil %>
    </p>
  <% end %>
  <%= link_to _('New Product'), new_product_path, class: "marginLeftOnly text-light btn btn-primary" %>

<table class="hoverTable">
  <thead>
    <tr class="active">
      <th><%= sortable "id", _("ID") %></th>
      <th><%= sortable "product_name", _("NAME") %></th>
      <th><%= sortable "price", _("PRICE") %></th>
      <th><%= sortable "unit", _("UNIT") %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.product_name %></td>
        <td>&#8381 <%= product.price %></td>
        <td><%= product.unit %></td>
        <td><%= link_to _('Show'), product %></td>
        <td><%= link_to _('Edit'), edit_product_path(product) %></td>
        <td><%= link_to _('Destroy'), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


