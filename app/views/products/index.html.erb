<p id="notice"><%= notice %></p>

<h1>Products</h1><hr>

<%= link_to '+ New Product', new_product_path, :class => 'button big_button green' %>


<%= form_tag products_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
    <th class="align_left"><%= sortable "id", "Id" %></th>
      <th class="align_left"><%= sortable "product_name", "Product Name" %></th>
      <th class="align_right"><%= sortable "price", "Sale price" %></th>
      <th><%= sortable "unit", "Unit" %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |pi| %>
      <tr>
        <td><%= pi["id"] %></td>
        <td><%= pi["product_name"] %></td>
        <td class="align_right"><%= pi["price"] %></td>
        <td><%= pi["unit"] %></td>  
        <td><%= link_to "Show", "/products/#{pi["id"]}" %></td>
        <td><%= link_to "Edit", "/products/#{pi["id"]}/edit" %></td>
        <td><%= link_to "Delete", "/products/#{pi["id"]}", method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
        
  </tbody>
</table>

<br>





