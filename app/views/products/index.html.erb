<div class="jumbotron m-0 p-0">
  <div class="mr-4">
      
    <%= form_tag products_path, :method => 'get' do %> 
    <div class="row">
      <div class="col-6">
        <h1 class="ml-3"><%= _('Products') %></h1>
      </div>
      
      <div class="col-6">
        <div class="row justify-content-end mt-2">
          <div class="field p-0 col-6">
            <%= text_field_tag :search, params[:search], :size => 70, placeholder: _("ID, name etc."), class: "form-control searcheight" %>
          </div>
          <%= submit_tag _("Search"), :name => nil, :class => "searcheight btn btn-outline-primary" %>
        </div>
      </div> 
    </div>  
          

    <hr>
    <% end %>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="container ml-3">
  <%= link_to _('<i class="fa-solid fa-plus"></i> New Product').html_safe, new_product_path, class: "text-light btn btn-primary" %>
</div>


  
    <table class="table" style="width: 90%">
      <thead class="table-light">
        <tr class="active">
          <th scope="col"><%= sortable "id", _("ID") %></th>
          <th scope="col"><%= sortable "product_name", _("NAME") %></th>
          <th scope="col"><%= sortable "price", _("PRICE") %></th>
          <th scope="col"><%= sortable "unit", _("UNIT") %></th>
          <th><%= _('Category') %></th>
          <th><%= _('Payment') %></th>
          <th><%= _('Sales Count') %></th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.product_name %></td>
            <td>&#8381 <%= product.price %></td>
            <td><%= product.unit %></td>
            <td><%= product.categories %></td>
            <td><%= button_to _("Buy now!"), checkout_create_path, params: {id: product.id}, remote: true %></td>
            <td><%= product.sales_count %></td>
            <td><%= link_to '<i class="fa-solid fa-circle-info"></i>'.html_safe, product, class: "text-info" %></td>
            <td><%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_product_path(product), class: "text-primary" %></td>
            <td><%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, product, method: :delete, data: { confirm: _('Are you sure?') }, class: "text-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  


<br>


