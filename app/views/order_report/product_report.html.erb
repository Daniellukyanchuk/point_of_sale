<h1>Product's Report</h1>

<%= form_tag order_report_product_report_path, :method => 'get' do %>
    <p>Type in a Product:
      <%= text_field_tag :search, params[:search], placeholder: "Type in the Product" %>
    </p>
    <p>Select Products:
      <% options = Product.all.collect{ |u| [u.product_name, u.id] } %>
        <% options = [["Select All", nil]] + options %>
      <%= select_tag 'product_select[]', options_for_select(options, params[:product_select]), :multiple => :multiple, :class => "chosen-select"%>
    <p>Choose the date range: 
        <%= text_field_tag 'start_date', params[:start_date], :class => "datepicker", :autocomplete => "off", :placeholder => 1.month.ago.strftime("%a, %d - %b - %Y")%>
        <%= text_field_tag 'end_date', params[:end_date], :class => "datepicker", :autocomplete => "off", :placeholder => Date.today.strftime("%a, %d - %b - %Y")%>
        <%= submit_tag "Search", :name => nil %>        
    </p>
    </p>
<% end %>

<script>
    $( function() {
      $( ".datepicker" ).datepicker({ dateFormat: 'dd-mm-yy'});
    } );
</script>

<table>  
  <thead>
    <tr>
      <th><%= sortable "product_name", "products_name" %></th>
      <th><%= sortable "price", "Price" %></th>
      <th><%= sortable "amount_sold", "amount_sold" %></th>
      <th><%= sortable "amount_made", "amount_made" %></th>
      <th><%= sortable "average_unit_price"%></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_report.each do |product| %>
     <tr>
       <td><%= product["product_name"] %></td>
       <td><%= product["price"] %></td>
       <td><%= product["amount_sold"] %></td>
       <td><%= product["amount_made"] %></td>
       <td><%= product["average_unit_price"] %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">  
  $(".chosen-select").chosen({
  no_results_text: "Oops, nothing found!"
  })
</script>
<%= link_to 'Back', orders_path %>