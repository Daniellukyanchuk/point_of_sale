<form>
  <div class="jumbotron m-0 p-0">
    <div>
      <div class="row">
        <div class="col-6">
          <h1 class="ml-2"><%= _("Product's Report") %></h1>
        </div>
        <div class="col-6">
          <div class="row justify-content-end mr-1">
            <%= _('From') %>:
            <div class="field col-4">
              <% start_date_value = 1.month.ago.strftime("%d - %m - %Y") %>
              <% end_date_value = Date.today.strftime("%d - %m - %Y") %>
              <%= text_field_tag 'start_date', params[:start_date], :class => "datepicker form-control", :autocomplete => "off" %>
            </div>
            <%= _('To') %>:
            <div class="field col-4">
              <%= text_field_tag 'end_date', params[:end_date], :class => "datepicker form-control", :autocomplete => "off" %>
            </div>
          </div>
        </div> 
      </div>

    <%= form_tag product_report_path, :method => 'get' do %>
      <div class="ml-4">
        <div class="row mt-3">
          <div class="field col-4 p-0">
            <%= text_field_tag :search, params[:search], placeholder: "ID, Name etc.", class: "form-control searcheight" %>
          </div>
        
          <div class="col-4 p-0">
            <% options = Product.all.collect{ |u| [u.product_name, u.id] } %>
            <% options = [["Select All", nil]] + options %>
            <%= select_tag 'product_select[]', options_for_select(options, params[:product_select]), :multiple => :multiple, :size => 10, :id => "choices-multiple-remove-button", :placeholder => "Select products" %>
          </div>

          <div class="field mb-3 col-3 p-0">
            <%= submit_tag _("Search"), :name => nil, :class => "searcheight btn btn-outline-primary" %> 
          </div> 
        </div>    
      </div>
    <% end %>
    </div>
  </div>
</form>
<script>
    $( function() {
      $( ".datepicker" ).datepicker({ dateFormat: 'dd-mm-yy'});
    } );
</script>

<table class="table" style="width: 90%">  
  <thead>
    <tr class="active">
      <th><%= sortable "product_id", _("PRODUCT ID") %></th>
      <th><%= sortable "product_name", _("NAME") %></th>
      <th><%= sortable "price", _("PRICE") %></th>
      <th><%= sortable "amount_sold", _("UNIT SOLD") %></th>
      <th><%= sortable "amount_made", _("TOTAL REVENUE") %></th>
      <th><%= sortable "average_unit_price", _("AVERAGE UNIT PRICE") %></th>
      <th><%= sortable "weighted_average", _("COST PER UNIT") %></th>
      <th><%= sortable "weighted_average_sale_price", _("SALE PRICE") %></th>
      <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_report.each do |product| %>
     <tr>
       <td><%= product["product_id"] %></td>
       <td><%= product["product_name"] %></td>
       <td>&#8381 <%= product["price"] %></td>
       <td><%= product["amount_sold"] %></td>
       <td>&#8381 <%= product["amount_made"] %></td>
       <td>&#8381 <%= product["average_unit_price"] %></td>
       <td>&#8381 <%= product["weighted_average"] %></td>
       <td>&#8381 <%= product["weighted_average_sale_price"] %></td>
     </tr>
    <% end %>
  </tbody>
</table>

