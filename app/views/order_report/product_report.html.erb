<h1>Product's Report</h1>

<%= form_tag product_report_path, :method => 'get' do %>
    <p>Search for One:
      <%= text_field_tag :search, params[:search], placeholder: "ID, Name etc." %>
       Search for Multiple:
      <% options = Product.all.collect{ |u| [u.product_name, u.id] } %>
        <% options = [["Select All", nil]] + options %>
      <%= select_tag 'product_select[]', options_for_select(options, params[:product_select]), :multiple => :multiple, :class => "chosen-select"%>
       From:
        <% start_date_value = 1.month.ago.strftime("%d - %m - %Y") %>
        <% end_date_value = Date.today.strftime("%d - %m - %Y") %>
        <%= text_field_tag 'start_date', params[:start_date], :class => "datepicker", :autocomplete => "off" %>
        To:
        <%= text_field_tag 'end_date', params[:end_date], :class => "datepicker", :autocomplete => "off" %>
        <%= submit_tag "Search", :name => nil %>        
    </p>
<% end %>

<script>
    $( function() {
      $( ".datepicker" ).datepicker({ dateFormat: 'dd-mm-yy'});
    } );
</script>

<table class="hoverTable">  
  <thead>
    <tr class="active">
      <th><%= sortable "product_id", "PRODUCT ID" %></th>
      <th><%= sortable "product_name", "NAME" %></th>
      <th><%= sortable "price", "PRICE" %></th>
      <th><%= sortable "amount_sold", "UNIT SOLD" %></th>
      <th><%= sortable "amount_made", "TOTAL REVENUE" %></th>
      <th><%= sortable "average_unit_price", "AVERAGE UNIT PRICE" %></th>
      <th><%= sortable "weighted_average", "COST PER UNIT" %></th>
      <th><%= sortable "weighted_average_sale_price", "SALE PRICE" %></th>
      <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_report.each do |product| %>
     <tr>
       <td><%= product["product_id"] %></td>
       <td><%= product["product_name"] %></td>
       <td>&#8381 <%= product["price"] %></td>
       <td><%= product["amount_sold"] %></td>
       <td>&#8381 <%= product["amount_made"] %></td>
       <td>&#8381 <%= product["average_unit_price"] %></td>
       <td>&#8381 <%= product["weighted_average"] %></td>
       <td>&#8381 <%= product["weighted_average_sale_price"] %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">  
  $(".chosen-select").chosen({
  no_results_text: "Oops, nothing found!"
  })
</script>
