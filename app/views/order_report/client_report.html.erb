<script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
<link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet"/>
<div class="container ml-3">
    <h1><%= _("Client's Report") %></h1>

    <%= form_tag client_report_path, :method => 'get' do %>
        <p> 
        <div class="field"> 
          <%= text_field_tag :search, params[:search], placeholder: "ID, name etc.", class: "form-control" %>
        </div>
          <% options = Client.all.collect{ |u| [u.name, u.id] } %>
            <% options = [["Select All", nil]] + options %>
          <%= select_tag 'client_select[]', options_for_select(options, params[:client_select]), :multiple => :multiple, :class => "chosen-select"%>
          <%= submit_tag _("Search"), :name => nil, :class => "btn btn-outline-primary" %>
        </p>
    <% end %>
</div>

<table class="table" style="width: 90%">
  <thead>
    <tr class="active">
      <th><%= sortable "client_id", _("CLIENTS ID") %></th>
      <th><%= sortable "clients_name", _("NAME") %></th>
      <th><%= sortable "total_money_spent", _("TOTAL MONEY SPENT") %></th>
      <th><%= sortable "number_of_orders", _("NUMBER OF ORDERS") %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_report.each do |client| %>
     <tr>
       <td><%= client["client_id"] %></td>
       <td><%= client["clients_name"] %></td>
       <td>&#8381 <%= client["total_money_spent"] %></td>
       <td><%= client["number_of_orders"] %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(".chosen-select").chosen({
  no_results_text: "Oops, nothing found!"
  })
</script>
