<p id="notice"><%= notice %></p>

<h1>Product Categories</h1>

<%= link_to '+ New Product Category', new_product_category_path, :class => "btn btn-secondary" %>
<hr>
<table>
  <thead>
    <tr>
      <th>Category name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.category_name %></td>
        <td><%= product_category.category_description %></td>
        <td><%= link_to '<i class="fa-solid fa-eye"></i>'.html_safe, product_category, class: "text-primary" %></td>
        <td><%= link_to '<i class="fa-solid fa-pencil"></i>'.html_safe, edit_product_category_path(product_category), class: "text-secondary" %></td>
        <td><%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, product_category, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

