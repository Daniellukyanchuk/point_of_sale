<p id="notice"><%= notice %></p>

<h1><%= _('Settings') %></h1>

<table  class="hoverTable">
  <thead>
    <tr>
      <th><%= _('Company name') %></th>
      <th><%= _('Company address') %></th>
      <th><%= _('Country') %></th>
      <th><%= _('City') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.company_name %></td>
        <td><%= setting.company_address %></td>
        <td><%= setting.country %></td>
        <td><%= setting.city %></td>
        <td><%= link_to 'Show', setting, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to _('New Setting'), new_setting_path %>

