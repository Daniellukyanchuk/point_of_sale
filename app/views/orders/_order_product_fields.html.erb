  
   
  
   <div class="nested-fields">
    <%= form.hidden_field :_destroy %>

      <div class="field">
          <%= form.collection_select :product_id, Product.all, :id, :product_name, {}, {class: "product_select"} %>
      </div>
    
      <div class="field">
        <%= form.label :quantity %>
        <%= form.number_field :quantity, id: "quantity" %>
      </div>

      <div class="field">
        <%= form.label :sale_price %>
        <%= form.number_field :sale_price, class: "sale_price" %>
      </div>

      <div class="field">
        <%= form.label :subtotal %>
        <%= form.number_field :subtotal, id: "subtotal", :class => "greyed_out", :readonly => true  %>
      </div>
      <div class="field">
        <%= link_to "Remove", "#", class: "remove_fields red" %>
      </div>
  </div>





    

  
    



  