  <div class="nested-fields">
    <%= form.hidden_field :_destroy %>
    <h2><%= _('Add Product') %></h2>

    <div class="field">
        <%= form.collection_select :product_id, Product.all, :id, :product_name, {}, {class: "product-picker"} %>
    </div>
  
    <div class="field">
      <%= form.label _('Quantity') %>
      <%= form.number_field :quantity %>
    </div>

    <div class="field">
      <%= form.label _('Sale price') %>
      <%= form.number_field :sale_price, class: "sale-price-field", :readonly => true %>
    </div>

    <div class="field">
      <%= form.label _('Subtotal') %>
      <%= form.number_field :subtotal, :readonly => true %>
    </div>
    
    <div>
      <%= link_to _("Remove"), '#', class: "remove_fields" %>
    </div>
  </div>

  


    

   


  