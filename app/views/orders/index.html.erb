<p id="notice"><%= notice %></p>

<h1>Orders</h1>
  
  <%= form_tag orders_path, :method => 'get' do %>
    <p>Search for One:
      <%= text_field_tag :search, params[:search], placeholder: "ID, name etc." %>
       Search for Multiple:
      <% options = Client.all.collect{ |u| [u.name, u.id] } %>
        <% options = [["Select All", nil]] + options %>
      <%= select_tag 'client_select[]', options_for_select(options, params[:client_select]), :multiple => :multiple, :class => "chosen-select"%> 
       From:
      <% start_date_value = 1.month.ago.strftime("%d - %m - %Y") %>
      <% end_date_value = Date.today.strftime("%d - %m - %Y") %>
      <%= text_field_tag 'start_date', params[:start_date], :class => "datepicker", :autocomplete => "off" %>
      To:
      <%= text_field_tag 'end_date', params[:end_date], :class => "datepicker", :autocomplete => "off" %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>

<script>
    $( function() {
      $( ".datepicker" ).datepicker({ dateFormat: 'dd-mm-yy'});
    } );
</script>  

<table class="hoverTable">
  <thead>
    <tr class="active">
      <th><%= sortable "id", "ID" %></th>
      <th><%= sortable "client_id", "CLIENTS ID" %></th>
      <th><%= sortable "clients.name", "NAME" %></th>
      <th><%= sortable "grand_total", "GRAND TOTAL" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.client_id %></td>
        <td><%= order.client.name %></td>
        <td>&#8381 <%= order.grand_total %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script type="text/javascript">  
  $(".chosen-select").chosen({
  no_results_text: "Oops, nothing found!"
  })
</script>

