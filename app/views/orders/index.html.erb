<form>  
  <div class="jumbotron m-0 p-0">
    <div>
      <div class="row">
        <div class="col-6">
          <h1 class="ml-2"><%= _('Orders') %></h1>
        </div>
        <div class="col-6">
          <div class="row justify-content-end mr-1">
              <%= _('From:') %>
              <div class="field col-4">
                <% start_date_value = 1.month.ago.strftime("%d - %m - %Y") %>
                <% end_date_value = Date.today.strftime("%d - %m - %Y") %>
                <%= text_field_tag 'start_date', params[:start_date], :class => "datepicker form-control", :autocomplete => "off" %>
              </div>

              <%= _('To:') %>
              <div class="field col-4">
                <%= text_field_tag 'end_date', params[:end_date], :class => "datepicker form-control", :autocomplete => "off" %>
              </div>
          </div>
        </div>                  
      </div>

      <%= form_tag orders_path, :method => 'get' do %>
        <div class="ml-4">
          <div class="row mt-3">
            <div class="field col-4 p-0">
              <%= text_field_tag :search, params[:search], placeholder: "ID, name etc.", class: "searcheight form-control" %>
            </div>

            <div class="col-5 p-0">
              <% options = Client.all.collect{ |u| [u.name, u.id] } %>
                <% options = [["Select All", nil]] + options %>
              <%= select_tag 'client_select[]', options_for_select(options, params[:client_select]), :multiple => :multiple, :size => 10, :id => "choices-multiple-remove-button", :placeholder => "Select clients"%> 
            </div>

            <div class="field mb-3 col-3 p-0">
              <%= submit_tag _("Search"), :name => nil, :class => "btn btn-outline-primary searcheight" %>
            </div>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</form>
<p id="notice"><%= notice %></p>
  
<div class="container ml-3">
  <%= link_to _('<i class="fa-solid fa-plus"></i> New Order').html_safe, new_order_path, class: "text-light btn btn-primary" %>
</div>

  <script>
      $( function() {
        $( ".datepicker" ).datepicker({ dateFormat: 'dd-mm-yy'});
      } );
  </script>  

  <table class="table px-0" style="width: 90%">
    <thead>
      <tr class="active">
        <th><%= sortable "id", _("ID")%></th>
        <th><%= sortable "client_id", _("CLIENTS ID") %></th>
        <th><%= sortable "clients.name", _("NAME") %></th>
        <th><%= sortable "grand_total", _("GRAND TOTAL") %></th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.client_id %></td>
          <td><%= order.client.name %></td>
          <td>&#8381 <%= order.grand_total %></td>
          <td><%= link_to '<i class="fa-solid fa-print"></i>'.html_safe, order_invoice_path, class: "text-secondary" %></td>
          <td><%= link_to '<i class="fa-solid fa-circle-info"></i>'.html_safe, order, class: "text-info" %></td>
          <td><%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_order_path(order.id), class: "text-primary" %></td>
          <td><%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, order_path(order.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <script type="text/javascript">
    $(document).ready(function(){

      var multipleCancelButton = new Choices('#choices-multiple-remove-button', {
      removeItemButton: true,
      maxItemCount:10,
      searchResultLimit:100,
      renderChoiceLimit:10
      });
    });
  </script>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.css">
<script src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.js"></script>