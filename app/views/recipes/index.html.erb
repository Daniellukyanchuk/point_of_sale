<p id="notice"><%= notice %></p>

<h1>Recipes</h1>


<%= form_tag recipes_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<table class="hoverTable">
  <thead>
    <tr class="active">
      <th><%= sortable "id", "ID" %></th>
      <th><%= sortable "product_name", "Recipe Name" %></th>
      <th><%= sortable "grand_total", "Recipe Cost" %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.id %></td>
        <td><%= recipe.product.product_name %></td>
        <td>&#8381 <%= recipe.grand_total %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
