<p id="notice"><%= notice %></p>

<h1><%= _('Recipes') %></h1>

<%= form_tag recipes_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag _("Search"), :name => nil %>
    </p>
<% end %>
<%= link_to _('New Recipe'), new_recipe_path, class: "marginLeftOnly text-light btn btn-primary btn-sm" %>

<table class="hoverTable">
  <thead>
    <tr class="active">
      <th><%= sortable "id", _("ID") %></th>
      <th><%= sortable "recipe_name", _("Recipe Name") %></th>
      <th><%= sortable "grand_total", _("Recipe Cost") %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.id %></td>
        <td><%= recipe.recipe_name %></td>
        <td>&#8381 <%= recipe.grand_total %></td>
        <td><%= link_to _('Show'), recipe, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to _('Edit'), edit_recipe_path(recipe), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to _('Destroy'), recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


