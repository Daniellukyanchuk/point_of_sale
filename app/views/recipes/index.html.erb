<div class="jumbomax container jumbotron m-0 p-0">
  <div class="container ml-3">
      <h1><%= _('Recipes') %></h1>
    
      <%= form_tag recipes_path, :method => 'get' do %>
          <p>
            <div class="field">
              <%= text_field_tag :search, params[:search], :size => 50, placeholder: "ID, name etc.", class: "form-control" %>
            </div>
            <%= submit_tag _("Search"), :name => nil, :class => "searchtag btn btn-outline-primary" %>
          </p>
          <hr>
      <% end %>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="container ml-3">
  <%= link_to _('+ New Recipe'), new_recipe_path, class: "text-light btn btn-primary" %>
</div>

<table class="table" style="width: 90%">
  <thead>
    <tr class="active">
      <th><%= sortable "id", _("ID") %></th>
      <th><%= sortable "recipe_name", _("Recipe Name") %></th>
      <th><%= sortable "grand_total", _("Recipe Cost") %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.id %></td>
        <td><%= recipe.recipe_name %></td>
        <td>&#8381 <%= recipe.grand_total %></td>
        <td><%= link_to _('Show'), recipe, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to _('Edit'), edit_recipe_path(recipe), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to _('Destroy'), recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


