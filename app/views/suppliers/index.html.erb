<div class="jumbomax container jumbotron m-0 p-0">
  <div class="container ml-3">
    <h1><%= _('Suppliers') %></h1>

    <%= form_tag suppliers_path, :method => 'get' do %>
      <p>
        <div class="field">
          <%= text_field_tag :search, params[:search], :size => 50, placeholder: "ID, name etc.", class: "form-control" %>
        </div>
        <%= submit_tag _("Search"), :name => nil, :class => "searchtag btn btn-outline-primary btn-md" %>
      </p>
      <hr>
    <% end %>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="container ml-3">
  <%= link_to _('+ New Supplier'), new_supplier_path, class: "text-light btn btn-primary" %>
</div>

<table class="table" style="width: 90%">
  <thead>
    <tr class="active">
      <th><%= sortable "id", _("ID") %></th>
      <th><%= sortable "suppliers_name", _("NAME") %></th>
      <th><%= sortable "city", _("CITY") %></th>
      <th><%= sortable "country", _("COUNTRY") %></th>
      <th><%= sortable "address", _("ADDRESS") %></th>
      <th><%= sortable _("phone_number") %></th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.id %></td>
        <td><%= supplier.suppliers_name %></td>        
        <td><%= supplier.city %></td>
        <td><%= supplier.country %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.phone_number %></td>
        <td><%= link_to _('Show'), supplier, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to _('Edit'), edit_supplier_path(supplier), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to _('Destroy'), supplier, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


