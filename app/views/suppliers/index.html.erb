<p id="notice"><%= notice %></p>

<h1><%= _('Suppliers') %></h1>

<%= link_to _('+ New Supplier'), new_supplier_path, :class => "btn btn-secondary" %><br><br>
<table>
  <thead>
    <tr>
      <th><%= _('Supplier name') %></th>
      <th><%= _('Address') %></th>
      <th><%= _('Phone') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.supplier_name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.phone %></td>
        <td><%= link_to '<i class="fa-solid fa-eye"></i>'.html_safe, supplier, class: "text-primary" %></td>
        <td><%= link_to '<i class="fa-solid fa-pencil"></i>'.html_safe, edit_supplier_path(supplier), class: "text-secondary" %></td>
        <td><%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, supplier, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

