<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

  <%= form_tag suppliers_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>

<table class="hoverTable" id="waypointsTable" border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Suppliers name</th>
      <th>City</th>
      <th>Country</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.id %></td>
        <td><%= supplier.suppliers_name %></td>        
        <td><%= supplier.city %></td>
        <td><%= supplier.country %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.phone_number %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supplier', new_supplier_path %>
