<div class="jumbotron m-0 p-0">
  <div class="mr-4">
    
    <%= form_tag suppliers_path, :method => 'get' do %>
    <div class="row">
      <div class="col-6">
        <h1 class="ml-3"><%= _('Suppliers') %></h1>
      </div>

      <div class="col-6">
        <div class="row justify-content-end mt-2">
          <div class="field p-0 col-6">
            <%= text_field_tag :search, params[:search], :size => 50, placeholder: "ID, name etc.", class: "form-control searcheight" %>
          </div>
          <%= submit_tag _("Search"), :name => nil, :class => "searcheight btn btn-outline-primary" %>
        </div>
      </div>
    </div>
    <hr>
    <% end %>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="container ml-3">
  <%= link_to _('<i class="fa-solid fa-plus"></i> New Supplier').html_safe, new_supplier_path, class: "text-light btn btn-primary" %>
</div>

<table class="table" style="width: 90%">
  <thead>
    <tr class="active">
      <th><%= sortable "id", _("ID") %></th>
      <th><%= sortable "suppliers_name", _("NAME") %></th>
      <th><%= sortable "city", _("CITY") %></th>
      <th><%= sortable "address", _("ADDRESS") %></th>
      <th><%= sortable _("Phone_number") %></th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.id %></td>
        <td><%= supplier.suppliers_name %></td>        
        <td><%= supplier.city %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.phone_number %></td>
        <td><%= link_to '<i class="fa-solid fa-circle-info"></i>'.html_safe, supplier, class: "text-info" %></td>
        <td><%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_supplier_path(supplier), class: "text-primary" %></td>
        <td><%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, supplier, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


