<p id="notice"><%= notice %></p>

<h1><%= _("Inventory Records") %></h1>

<hr>
<%= link_to _('+ Add to Inventory'), new_inventory_path, :class => "button big_button green" %>
<br><br>



<table>
  <thead>
    <tr>
      <th><%=_("Inventory Id") %></th>
      <th><%=_("Product Name") %></th>
      <th align="right"><%=_("Remaining Qty") %></th>
      <th align="right"><%=_("Cost per Unit") %></th>      
      <th><%=_("Product Id") %></th>
      <th><%=_("Production Id") %></th>
      <th><%=_("Purchase Id") %></th>
      <th><%=_("P.O. Product Id") %></th>
      <th><%=_("Date added") %></th>
      <th colspan="9"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <% next if inventory.product.nil? %>
      <tr>
        <td align="center"><%= inventory.id %></td>
        <td><%= inventory.product.product_name %></td>
        <td align="right"><%= inventory.remaining_quantity %> <%= inventory.product.unit %></td>
        <td align="right"><%= inventory.cost_per_unit %></td>
        <td align="center"><%= inventory.product_id %></td>
        <td align="center"><%= inventory.production_id %></td>
        <td align="center"><%= inventory.purchase_id %></td>
        <td align="center"><%= inventory.purchase_product_id %></td>
        <td align="center"><%= inventory.created_at.strftime("%d %b %Y") %></td>

        <td><%= link_to _('Show'), inventory, class: "show" %></td>
        <td><%= link_to _('Edit'), edit_inventory_path(inventory), class: "edit" %></td>
        <td><%= link_to _('Destroy'), inventory, method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>






