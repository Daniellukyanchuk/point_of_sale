<script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
<link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet"/>

<p id="notice"><%= notice %></p>
<div class="container ml-3">
    <h1><%= _('Purchased Inventories') %></h1>

    <%= form_tag inventories_path, :method => 'get' do %>
      <p>
         <div class="field">
           <%= text_field_tag :search, params[:search], placeholder: "ID, name etc.", class: "form-control" %> 
         </div>   
         
          <% options = Product.all.collect{ |u| [u.product_name, u.id] } %>
            <% options = [["Select All", nil]] + options %>
          <%= select_tag 'product_select[]', options_for_select(options, params[:product_select]), :multiple => :multiple, :class => "chosen-select"%>      
         <%= _('From') %>:
         <div class="field">
            <% start_date_value = 1.month.ago.strftime("%d - %m - %Y") %>
            <% end_date_value = Date.today.strftime("%d - %m - %Y") %>
            <%= text_field_tag 'start_date', params[:start_date], :class => "datepicker form-control", :autocomplete => "off" %>
         </div>
          <%= _('To') %>:
         <div class="field">
            <%= text_field_tag 'end_date', params[:end_date], :class => "datepicker form-control", :autocomplete => "off" %>
         </div>

         <div class="field">
           <%= submit_tag _("Search"), :name => nil, :class => "searchtag btn btn-outline-primary" %>
         </div>
      </p>
    <% end %>

    <%= link_to _('New Inventory'), new_inventory_path, class: "text-light btn btn-primary" %>
</div>

<script>
    $( function() {
      $( ".datepicker" ).datepicker({ dateFormat: 'dd-mm-yy'});
    } );
</script>

<table class="table" style="width: 90%">
  <thead>
    <tr class="active">
      <th><%= sortable "id", _("ID") %></th>
      <th><%= sortable "product_name", _("PRODUCTS NAME") %></th>
      <th><%= sortable "date", _("DATE") %></th>
      <th><%= sortable "amount", _("AMOUNT PURCHASED/PRODUCED") %></th>
      <th><%= sortable "price_per_unit", _("UNIT PRICE") %></th>
      <th><%= sortable "costs", _("PURCHASED COST") %></th>
      <th><%= sortable "current_amount_left", _("AMOUNT LEFT") %></th>
      <th><%= sortable "purchase_product_id", _("Purchase ID") %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.id %></td>
        <td><a href="/products/<%= inventory.product.id  %>/edit" ><%= inventory.product.product_name %></a></td>
        <td><%= inventory.date.nil? ? "" : inventory.date.strftime("%d-%m-%Y") %></td>
        <td><%= inventory.amount %></td>
        <td>&#8381 <%= inventory.price_per_unit %></td>
        <td>&#8381 <%= inventory.costs %></td>
        <td><%= inventory.current_amount_left %></td>
        <% if inventory.purchase_product.nil? %>
          <td></td>
        <% else %>
          <td>
              <a href="/purchases/<%= inventory.purchase_product.purchase.id %>/edit" ><%= inventory.purchase_product_id %></a>
          </td>
        <% end %>
        <td><%= link_to _('Show'), inventory, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to _('Edit'), edit_inventory_path(inventory), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to _('Destroy'), inventory, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>  

<br>

<script type="text/javascript">  
  $(".chosen-select").chosen({
  no_results_text: "Oops, nothing found!"
  })
</script>
