<div class="jumbotron m-0 p-0">
  <div class="mr-4">
      
    <%= form_tag products_path, :method => 'get' do %> 
    <div class="row">
      <div class="col-6">
        <h1 class="ml-3"><%= _('Users') %></h1>
      </div>
      
      <div class="col-6">
        <div class="row justify-content-end mt-2">
          <div class="field p-0 col-6">
            <%= text_field_tag :search, params[:search], :size => 70, placeholder: "ID, name etc.", class: "form-control searcheight" %>
          </div>
          <%= submit_tag _("Search"), :name => nil, :class => "searcheight btn btn-outline-primary" %>
        </div>
      </div> 
    </div>  
          

    <hr>
    <% end %>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="container ml-3">
  <%= link_to '+ New User', new_user_path, class: "text-light btn btn-primary" %>
</div>

<table class="table" style="width: 90%">
  <thead>
    <tr>
      <th>Users name</th>
      <th>User email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>




